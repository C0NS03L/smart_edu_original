<% content_for :title, 'SmartEDU - Effortless School Check-In and Attendance Management' %>

<div class="min-h-screen bg-gradient-to-b from-blue-500 to-purple-500">
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-transparent to-white py-8">
    <div class="container mx-auto px-6 py-12 md:py-24">
      <div class="flex flex-col items-center lg:flex-row">
        <div class="mb-8 text-center lg:mb-0 lg:w-1/2 lg:text-left">
          <p
            class="bg-linear-to-r mb-12 inline from-slate-800 via-red-800 to-indigo-800 bg-clip-text text-3xl font-semibold text-transparent"
          >
            SmartEDU
          </p>
          <h1 class="mb-4 text-4xl font-bold leading-tight sm:text-5xl">
            Effortless School Check-In and Attendance Management
          </h1>
          <p class="mb-8 text-xl text-gray-700">
            Simplify your attendance process, enhance security, and gain valuable insights with our comprehensive
            solution.
          </p>
          <div class="flex flex-col justify-center space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0 lg:justify-start">
            <a href="#features" class="btn btn-secondary"> Learn More </a>
            <%= link_to 'Log In', new_session_path, class: 'btn btn-primary' %>
          </div>
        </div>
        <div class="flex justify-center lg:w-1/2 lg:justify-end">
          <%= image_tag 'smartedu-dashboard.png',
                        alt: 'SmartEDU Dashboard',
                        class: 'rounded-xl',
                        style: 'object-fit: contain; width: 600px; height: 400px;' %>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-gradient-to-b from-white to-blue-50 py-12" id="pricing">
    <%= render 'shared/subscription_form', show_subscribe_button: false %>
    <div class="mt-12 text-center">
      <a href="#" class="mt-4 inline-block text-blue-600 hover:underline">Contact our sales team</a>
    </div>
  </section>

  <!-- Hidden checkout form -->
  <form id="checkoutForm" action="/charge" method="post" class="hidden">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="amount" id="amount" value="" />
    <input type="hidden" name="tier" id="tier" value="" />
    <input type="hidden" name="omiseToken" value="" />
    <input type="hidden" name="omiseSource" value="" />
  </form>

  <!-- Payment Result Modal -->
  <div id="paymentModal" class="fixed inset-0 z-50 flex hidden items-center justify-center bg-gray-900 bg-opacity-50">
    <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-lg">
      <h2 class="mb-4 text-xl font-bold">Payment Status</h2>
      <p id="paymentModalBody" class="text-gray-700">Processing payment...</p>
      <div class="mt-6 flex justify-end">
        <button
          class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600"
          onclick="document.getElementById('paymentModal').classList.add('hidden')"
        >
          Close
        </button>
      </div>
    </div>
  </div>

  <!-- Problem and Solution Section -->
  <section class="bg-white py-8">
    <div class="container m-12 mx-auto px-6">
      <div class="flex flex-row gap-12 lg:flex-col">
        <!-- Problems Column -->
        <div>
          <h2 class="mb-6 text-3xl font-bold text-blue-600">The Challenges of Traditional Attendance</h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <i class="fa-solid fa-triangle-exclamation mr-4 mt-1"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Time-consuming manual processes</span> that take teachers away from valuable
                instruction time.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-triangle-exclamation mr-4 mt-1"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Inaccurate attendance records</span> leading to compliance issues and safety
                concerns.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-triangle-exclamation mr-4 mt-1"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Limited visibility</span> into attendance patterns and trends.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-triangle-exclamation mr-4 mt-1"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Security vulnerabilities</span> with paper-based systems and outdated
                technology.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-triangle-exclamation mr-4 mt-1"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Difficulty communicating</span> attendance information to parents and
                administrators.
              </p>
            </li>
          </ul>
        </div>

        <!-- Solutions Column -->
        <div>
          <h2 class="mb-6 text-3xl font-bold text-green-600">The SmartEDU Solution</h2>
          <ul class="space-y-4">
            <li class="flex items-start">
              <i class="fa-solid fa-check mr-4 mt-1 text-green-600"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Automated check-in system</span> that takes seconds, not minutes.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check mr-4 mt-1 text-green-600"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Real-time, accurate attendance tracking</span> with digital records and
                backup.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check mr-4 mt-1 text-green-600"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Comprehensive reporting tools</span> that identify patterns and alert to
                concerns.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check mr-4 mt-1 text-green-600"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Enhanced security features</span> with controlled access and data
                protection.
              </p>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check mr-4 mt-1 text-green-600"></i>
              <p class="text-slate-600">
                <span class="font-semibold">Seamless communication</span> with automated notifications and shared
                dashboards.
              </p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-transparent py-8" id="features">
    <div class="container m-12 mx-auto px-6 text-center">
      <h1 class="mb-4 text-4xl font-bold leading-tight sm:text-5xl">Key Features & Benefits</h1>
      <p class="mb-8 text-xl">
        SmartEDU provides everything you need to streamline attendance and <br />
        enhance school safety
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        <div class="m-2 flex w-1/3 flex-col items-start rounded-lg bg-white p-6 shadow-md lg:w-1/4">
          <div class="mb-4">
            <i class="fa-solid fa-qrcode"></i>
          </div>
          <h3 class="mb-2 text-xl font-semibold text-blue-700">QR Code Check-In</h3>
          <p class="text-gray-600">
            Fast and efficient student check-in using QR codes, reducing lines and saving valuable time.
          </p>
        </div>

        <div class="m-2 flex w-1/3 flex-col items-start rounded-lg bg-white p-6 shadow-md lg:w-1/4">
          <div class="mb-4">
            <i class="fa-solid fa-chart-line"></i>
          </div>
          <h3 class="mb-2 text-xl font-semibold text-blue-700">Real-Time Reporting</h3>
          <p class="text-gray-600">
            Instant access to attendance data, trends, and insights to inform decision-making.
          </p>
        </div>

        <div class="m-2 flex w-1/3 flex-col items-start rounded-lg bg-white p-6 shadow-md lg:w-1/4">
          <div class="mb-4">
            <i class="fa-solid fa-user-check"></i>
          </div>
          <h3 class="mb-2 text-xl font-semibold text-blue-700">Automated Notifications</h3>
          <p class="text-gray-600">
            Customizable alerts for late arrivals, early dismissals, and other attendance events.
          </p>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  function updatePricing() {
    const studentCount = parseInt(document.getElementById('studentCount').value)
    let monthlyCost = 0
    let plan = 'trial'

    if (studentCount <= 0 || isNaN(studentCount)) {
      // Disable the "Get Started" button if student count is 0 or less
      document.getElementById('getStartedLink').innerHTML = '' // Clear the button
      document.getElementById('errorMessage').classList.remove('hidden') // Show error message
      document.getElementById('freeTierMessage').classList.add('hidden') // Hide free tier message
      return // Exit the function early
    } else {
      document.getElementById('errorMessage').classList.add('hidden') // Hide error message
    }

    if (studentCount <= 20) {
      monthlyCost = 0
      plan = 'trial'
      document.getElementById('freeTierMessage').classList.remove('hidden')
    } else if (studentCount < 800) {
      monthlyCost = studentCount * 0.5
      plan = 'standard'
      document.getElementById('freeTierMessage').classList.add('hidden')
    } else {
      monthlyCost = studentCount * 0.4
      plan = 'premium'
      document.getElementById('freeTierMessage').classList.add('hidden')
    }

    document.getElementById('monthlyCost').innerText = '$' + monthlyCost

    // Generate link based on plan and cost
    const link = document.createElement('a')
    link.href = `/signup/new_principal?plan=${plan}&amount=${monthlyCost}`
    link.className = 'btn btn-primary w-full'
    link.textContent = 'Get Started'

    document.getElementById('getStartedLink').innerHTML = '' // Clear previous link
    document.getElementById('getStartedLink').appendChild(link)
  }

  // Add event listener to update pricing dynamically
  document.getElementById('studentCount').addEventListener('input', updatePricing)
  updatePricing()

  document.getElementById('subscribeButton').addEventListener('click', function (event) {
    event.preventDefault()
    OmiseCard.open({
      amount: parseInt(document.getElementById('amount').value),
      currency: 'USD',
      defaultPaymentMethod: 'credit_card',
      onCreateTokenSuccess: (nonce) => {
        if (nonce.startsWith('tokn_')) {
          document.querySelector('input[name="omiseToken"]').value = nonce
          document.getElementById('checkoutForm').submit()
        } else {
          document.querySelector('input[name="omiseSource"]').value = nonce
          document.getElementById('checkoutForm').submit()
        }
      }
    })
  })

  document.getElementById('checkoutForm')?.addEventListener('submit', (event) => {
    event.preventDefault()

    document.getElementById('paymentModalBody').innerText = 'Processing payment...'
    document.getElementById('paymentModal').classList.remove('hidden')

    fetch(event.target.action, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/x-www-form-urlencoded',
        'X-CSRF-Token': document.querySelector('input[name="authenticity_token"]').value
      },
      body: new URLSearchParams(new FormData(event.target)),
      credentials: 'include',
      redirect: 'follow' // Follow redirects automatically
    })
      .then((response) => {
        document.getElementById('paymentModal').classList.add('hidden')

        // Handle redirects by checking if response has a redirected flag
        if (response.redirected) {
          window.location.href = response.url
          return null
        }

        return response.text()
      })
      .then((html) => {
        if (html) {
          document.body.innerHTML = html
        }
      })
      .catch((error) => {
        document.getElementById('paymentModal').classList.add('hidden')
        alert('Error: ' + error.message)
      })
  })
</script>

<div class="drawer">
  <input id="my-drawer" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content"><%= yield %></div>
  <div class="drawer-side">
    <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
      <!-- Sidebar content here -->
      <li>
        <%= link_to root_path do %>
          <i class="fas fa-tachometer-alt"></i> <%= t('drawer.dashboard') %>
        <% end %>
      </li>
      <% unless Current.student? %>
        <li>
          <%= link_to students_path do %>
            <i class="fas fa-user-graduate"></i> <%= t('drawer.manage_students') %>
          <% end %>
        </li>
        <li>
          <%= link_to new_attendance_path do %>
            <i class="fas fa-qrcode"></i> <%= t('drawer.add_attendance') %>
          <% end %>
        </li>
        <li>
          <%= link_to attendances_path do %>
            <i class="fas fa-list"></i> <%= t('drawer.list_attendances') %>
          <% end %>
        </li>
      <% end %>
      <% if Current.principal? %>
        <li>
          <%= link_to principal_settings_path do %>
            <i class="fas fa-cog"></i> <%= t('drawer.settings') %>
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to session_path, data: { turbo_method: :delete } do %>
          <i class="fas fa-sign-out-alt"></i> <%= t('drawer.logout') %>
        <% end %>
      </li>
      <li class="mt-4 border-t pt-2">
        <div class="flex justify-center">
          <div class="join">
            <%= link_to 'EN', { locale: :en }, class: "join-item btn btn-xs #{I18n.locale == :en ? 'btn-active' : ''}" %>
            <%= link_to 'TH', { locale: :th }, class: "join-item btn btn-xs #{I18n.locale == :th ? 'btn-active' : ''}" %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

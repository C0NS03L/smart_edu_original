<%= render 'shared/single_box' do %>
  <div class="card-body">
    <h1 class="card-title mb-4 text-2xl"><%= t('passwords.new.heading') %></h1>
    <% if flash[:alert] %>
      <div class="alert alert-error"><%= flash[:alert] %></div>
    <% end %>
    <%= form_with url: passwords_path, class: 'space-y-4' do |form| %>
      <div class="form-control">
        <%= form.email_field :email_address,
                             required: true,
                             autofocus: true,
                             autocomplete: 'username',
                             placeholder: t('passwords.new.email_placeholder'),
                             value: params[:email_address],
                             class: 'input input-bordered w-full' %>
      </div>
      <div class="form-control mt-6">
        <%= form.submit t('passwords.new.submit_button'), class: 'btn btn-primary w-full' %>
      </div>
      <div class=""><%= link_to t('passwords.new.sign_in_link'), new_session_path, class: 'btn btn-ghost' %></div>
    <% end %>
  </div>
<% end %>

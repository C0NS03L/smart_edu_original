<% content_for :title, 'Payment History' %>

<div class="flex min-h-screen px-[40px] pt-[30px]">
  <div class="min-w-full">
    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-accent-100 text-[24px] font-bold">Payment History</h1>
    </div>

    <% if @payments.empty? %>
      <div class="rounded-lg border p-6 text-center">
        <p class="text-gray-600">No payment history available.</p>
      </div>
    <% else %>
      <div class="overflow-x-auto rounded-lg border">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-primary-100">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Date
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Amount
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Plan
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Payment Method
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Card
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">
                Status
              </th>
            </tr>
          </thead>
          <tbody class="bg-primary-100 divide-y divide-gray-200">
            <% @payments.each do |payment| %>
              <tr>
                <td class="text-accent-900 whitespace-nowrap px-6 py-4 text-sm">
                  <%= payment.payment_date.strftime('%B %d, %Y') %>
                </td>
                <td class="text-accent-900 whitespace-nowrap px-6 py-4 text-sm">
                  $<%= sprintf('%.2f', payment.amount) %>
                </td>
                <td class="text-accent-900 whitespace-nowrap px-6 py-4 text-sm">
                  <%= payment.subscription_plan.titleize if payment.subscription_plan %>
                </td>
                <td class="text-accent-900 whitespace-nowrap px-6 py-4 text-sm">
                  <%= payment.payment_method.titleize %>
                </td>
                <td class="text-accent-900 whitespace-nowrap px-6 py-4 text-sm"><%= payment.masked_card || '-' %></td>
                <td class="whitespace-nowrap px-6 py-4 text-sm">
                  <span
                    class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800"
                  >
                    <%= payment.status.titleize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>

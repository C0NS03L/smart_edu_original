<% content_for :title, 'Code Generation' %>
<div class="flex min-h-[calc(100vh-64px)] flex-col items-center justify-center space-y-8">
  <div class="text-center">
    <h2 class="mb-4 text-3xl font-bold">Teacher Code</h2>
    <div class="rounded border p-4 shadow-sm">
      <label for="teacher-uses" class="mb-2 block text-lg font-medium">Number of Accounts Required</label>
      <input type="number" id="teacher-uses" class="input input-bordered mb-4 w-full" placeholder="Enter Number" />
      <button class="btn btn-primary w-full">Generate</button>
    </div>
  </div>
  <div class="text-center">
    <h2 class="mb-4 text-3xl font-bold">Student Code</h2>
    <div class="rounded border p-4 shadow-sm">
      <label for="student-uses" class="mb-2 block text-lg font-medium">Number of Accounts Required</label>
      <input type="number" id="student-uses" class="input input-bordered mb-4 w-full" placeholder="Enter Number" />
      <button class="btn btn-primary w-full">Generate</button>
    </div>
  </div>
</div>

<%= render 'shared/notice' %>
<% content_for :title, t('students.index.page_title') %>
<div class="flex justify-end p-2">
  <%= link_to t('students.index.new_student'), new_student_path, class: 'btn btn-primary' %>
</div>
<div data-controller="search">
  <div class="flex items-center justify-center"><%== pagy_nav(@pagy) %></div>
  <div class="m-2 overflow-x-auto">
    <%= search_form_for @q,
                        url: students_path(format: :js),
                        method: :get,
                        html: {
                          class: 'mb-4',
                          data: {
                            search_target: 'form',
                            action: 'input->search#search'
                          }
                        } do |f| %>
      <%= f.search_field :name_cont, placeholder: t('students.index.search_placeholder'), class: 'input', autocomplete: 'off' %>
    <% end %>
    <div data-search-target="results"><%= render 'table', students: @students, q: @q %></div>
  </div>
  <div class="flex items-center justify-center"><%== pagy_nav(@pagy) %></div>
</div>

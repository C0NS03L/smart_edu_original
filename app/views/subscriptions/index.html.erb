<% content_for :title, 'Subscriptions' %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Select Your Subscription Plan</title>
    <script
      src="https://cdn.omise.co/omise.js"
      integrity="sha384-v6y29T/P7GSTWYN1YtWJ/nr3af4GzVNQqX3CA8xqvo4Qj5ow7dkYuRq06/wS0GSW"
      crossorigin="anonymous"
    ></script>
  </head>
  <body class="bg-gray-100">
    <div class="container mx-auto mt-20 px-4 py-10">
      <h1 class="mb-6 text-center text-3xl font-bold">Select Your Subscription Plan</h1>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <div class="rounded-lg border border-green-500 bg-white p-6 text-center shadow-md">
          <h2 class="text-xl font-semibold">Free Trial</h2>
          <p class="text-gray-600">Try our service for free for 30 days.</p>
          <p class="text-gray-500">Up to 200 Students</p>
          <button
            class="select-tier mt-4 rounded bg-green-500 px-4 py-2 text-white"
            data-amount="0"
            data-tier="free_trial"
          >
            Select
          </button>
        </div>
        <div class="rounded-lg border border-blue-500 bg-white p-6 text-center shadow-md">
          <h2 class="text-xl font-semibold">Plan for 500 Students</h2>
          <p class="text-gray-600">Get access for up to 500 students for $500/month.</p>
          <p class="text-gray-500">$1.00 Per Student.</p>
          <button
            class="select-tier mt-4 rounded bg-blue-500 px-4 py-2 text-white"
            data-amount="45000"
            data-tier="500_students"
          >
            Select
          </button>
        </div>
        <div class="rounded-lg border border-blue-500 bg-white p-6 text-center shadow-md">
          <h2 class="text-xl font-semibold">Plan for 1000 Students</h2>
          <p class="text-gray-600">Get access for up to 1000 students for $800/month.</p>
          <p class="text-gray-500">$0.80 per student.</p>
          <button
            class="select-tier mt-4 rounded bg-blue-500 px-4 py-2 text-white"
            data-amount="80000"
            data-tier="1000_students"
          >
            Select
          </button>
        </div>
      </div>
    </div>

    <form id="checkoutForm" method="POST" action="/charge" class="hidden">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="hidden" name="omiseToken" />
      <input type="hidden" name="omiseSource" />
      <input type="hidden" name="amount" id="amount" />
      <input type="hidden" name="tier" id="tier" />
      <button type="submit" id="checkoutButton">Checkout</button>
    </form>

    <div id="paymentModal" class="fixed inset-0 flex hidden items-center justify-center bg-black bg-opacity-50">
      <div class="w-1/3 rounded-lg bg-white p-6 shadow-lg">
        <h5 class="mb-4 text-xl font-semibold">Payment Status</h5>
        <p id="paymentModalBody"></p>
        <button
          class="mt-4 rounded bg-gray-500 px-4 py-2 text-white"
          onclick="document.getElementById('paymentModal').classList.add('hidden')"
        >
          Close
        </button>
      </div>
    </div>

    <script>
      OmiseCard.configure({ publicKey: 'pkey_test_62unknn2ef7aol8k7nm' })

      document.querySelectorAll('.select-tier').forEach((button) => {
        button.addEventListener('click', (event) => {
          var amount = event.target.getAttribute('data-amount')
          var tier = event.target.getAttribute('data-tier')
          document.getElementById('amount').value = amount
          document.getElementById('tier').value = tier

          if (amount === 0) {
            document.getElementById('checkoutForm').submit()
          } else {
            OmiseCard.open({
              amount: amount,
              currency: 'USD',
              defaultPaymentMethod: 'credit_card',
              onCreateTokenSuccess: (nonce) => {
                if (nonce.startsWith('tokn_')) {
                  document.querySelector('input[name="omiseToken"]').value = nonce
                } else {
                  document.querySelector('input[name="omiseSource"]').value = nonce
                }
                document.getElementById('checkoutForm').submit()
              }
            })
          }
        })
      })

      document.getElementById('checkoutForm').addEventListener('submit', (event) => {
        event.preventDefault()
        fetch(event.target.action, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
            'X-CSRF-Token': document.querySelector('input[name="authenticity_token"]').value
          },
          body: new URLSearchParams(new FormData(event.target))
        })
          .then((response) => response.json())
          .then((data) => {
            document.getElementById('paymentModalBody').innerText = data.message
            document.getElementById('paymentModal').classList.remove('hidden')
          })
          .catch((error) => {
            document.getElementById('paymentModalBody').innerText = 'Payment failed: ' + error.message
            document.getElementById('paymentModal').classList.remove('hidden')
          })
      })
    </script>
  </body>
</html>
